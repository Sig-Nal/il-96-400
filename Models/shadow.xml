<?xml version="1.0"?>

<PropertyList>

  <path>shadow.ac</path>
  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>+5.5</z-m>
  </offsets>

    <animation>
        <type>select</type>
        <object-name>shadow</object-name>
        <condition>
            <and>
                <not>
                    <property>/sim/rendering/rembrandt/enabled</property>
                </not>
                <!--less-than>
                    <property>sim/multiplay/generic/float[4]</property>
                    <value>500</value>
                </less-than-->
                <greater-than>
                    <property>rendering/scene/ambient/blue</property>
                <value>0.35</value>
                </greater-than>
            </and>
        </condition>
    </animation> 

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>shadow</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>shadow</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basÃ© sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>shadow</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>shadow</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

        <!--animation>
            <type>translate</type>
            <object-name>shadow</object-name>
            <property>sim/multiplay/generic/float[2]</property>
            <axis>
                <x>0</x>
                <y>0</y>
                <z>-1</z>
            </axis>
        </animation-->


  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>shadow</object-name>
   <!--property>position/altitude-agl-ft</property-->
   <property>sim/multiplay/generic/float[7]</property>
   <factor>-0.3</factor>
   <center>
     <x-m>0</x-m>
     <y-m>0</y-m>
     <z-m>0</z-m>
   </center>
   <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
   </axis>
 </animation>

</PropertyList>

